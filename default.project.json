{
    "name": "flux-framework",
    "emitLegacyScripts": false,

    "tree": {
        "$className": "DataModel",

        "ReplicatedStorage": {
            "packages": {
                "$path": "packages"
            },

            "shared": {
                "$path": "src/shared"
            },

            "client": {
                "$path": "src/client"
            }
        },

        "ServerScriptService": {
            "server": {
                "$path": "src/server"
            }
        },

        "Workspace": {
            "$properties": {
                "FilteringEnabled": true
            }
        },

        "SoundService": {
            "$properties": {
                "RespectFilteringEnabled": true
            }
        }
    }
}
